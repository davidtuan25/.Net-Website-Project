@model IEnumerable<DotNet_Website_Project.Models.JOB>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_BackendLayout.cshtml";
}

<div class="breadcrumbs">
    <div class="col-sm-4">
        <div class="page-header float-left">
            <div class="page-title"> 
                <h1>Quản lý công việc</h1>
            </div>
        </div>
    </div>
    <div class="col-sm-8">
        <div class="page-header float-right">
            <div class="page-title">
                <ol class="breadcrumb text-right">
                    <li><a href="#">Dashboard</a></li>
                    <li><a href="#">Table</a></li>
                    <li class="active">Data table</li>
                </ol>
            </div>
        </div>
    </div>
</div>
<div >
    @Html.ActionLink("Create New", "Create", new { @class="btn btn-primary" })
</div>
<div class="col-md-12">
    <div class="card">
        <div class="card-header">

        </div>
        <div class="card-body">
            <table id="bootstrap-data-table-export" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>STT</th>
                        <th>
                            @Html.DisplayNameFor(model => model.JOB_CODE)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.JOB_NAME)
                        </th>
                        <th>
                            Lương/1giờ
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.JOB_CATEGORY.CATEGORY_NAME)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.TOWN.TOWN_NAME)
                        </th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                <tbody>
                    @{ int i = 1;}
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@(i++)</td>
                            <td>
                                @Html.ActionLink(item.JOB_CODE, "Details", new { id = item.JOB_ID }, new { @class = "btn btn-outline-primary" })
                             
                            </td>
                            <td>
                                @Html.ActionLink(item.JOB_NAME, "Details",new { id = item.JOB_ID }, new { @class = "btn btn-outline-primary" })
                                
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.MINIMUM_WAGE) - @Html.DisplayFor(modelItem => item.MAXIMUM_WAGE)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.JOB_CATEGORY.CATEGORY_NAME)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TOWN.TOWN_NAME), @Html.DisplayFor(modelItem => item.TOWN.PROVINCE.PROVINCE_NAME)
                            </td>
                            <td style="margin:0;padding:10px;width:180px">
                                @Html.ActionLink("Edit", "Edit", new { id = item.JOB_ID }, new { @class = "btn btn-primary" })
                                @Html.ActionLink("Delete", "Delete", new { id = item.JOB_ID }, new { @class= "btn btn-danger" })
                            </td>
                        </tr>
                    }

                </tbody>
                </table>
            </div>
        </div>
    </div>
